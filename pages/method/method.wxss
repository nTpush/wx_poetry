/* pages/method/method.wxss */
page {
    background: #f5f5f5;
}

.container {
    width: 95%;
    margin: 0 auto;
}

.methoBox {
    padding-bottom: 50rpx;
}

.methoBox .item {
    margin-top: 30rpx;
    box-sizing: border-box;
    padding: 30rpx 40rpx;
    border-radius: 20rpx;
    background-size: cover;
    color: #fff;
    height: 280rpx;
    position: relative;
    overflow: hidden;
}

.methoBox .title {
    font-size: 50rpx;
    font-weight: bold;
    letter-spacing: 20rpx;
    margin-bottom: 10rpx;
}

.methoBox .tip {
    font-size: 32rpx;
}

.buttonBox {
    position: absolute;
    bottom: 30rpx;
    right: 30rpx;
}

.buttonBox view {
    background: #fff;
    color: #464B4B;
    display: inline-block;
    border-radius: 80rpx;
    font-size: 32rpx;
    padding: 10rpx 30rpx;
}

.lock {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
}

.lock .icon {
    width: 130rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    opacity: 0.7;
    height: 130rpx;
}

.desc image {
    width: 300rpx;
    height: 100rpx;
    margin-top: 30rpx;
}

.lala {
    text-align: center;
    color: #464B4B;
    font-size: 24rpx;
    height: 50rpx;
    line-height: 50rpx;
}