page {
  background: #ccc;
}

.hat_warp {
  width: 300rpx;
  height: 300rpx;
  background: #f5f5f5;
  border-radius: 50rpx;
  overflow: hidden;
  position: absolute;
  left: 50%;
  top: 30%;
  transform: translate(-50%, -50%);
  border: 10px solid rgba(255,0,9, .3);
}

.hat_warp image {
  width: 100%;
  height: 100%;
  
}