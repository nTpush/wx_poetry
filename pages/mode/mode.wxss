page {
  background-color: #f5f5f5;
  background-image: url(https://img.ok-bug.com/wechat/poetry_other/mode_desc1.png);
  background-size: cover;

}
.content {
  width: 95%;
  margin: 0 auto;
  margin-top: 40rpx;
}

.content .box {
  width: 100%;
  background: #F7FDFF;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
  min-height: 300rpx;
  overflow: hidden;
  box-shadow: 0 5rpx 10rpx rgba(0,0,0,.1);
}
.lock {
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
}
.lock .icon {
  width: 130rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  opacity: 0.7;
  height: 130rpx;
}
.title {
  color: #509BE3;
  font-size: 36rpx;
  font-weight: bold;
}

.info {
  color: #55585F;
  font-size: 34rpx;
  line-height: 50rpx;
  margin-top: 10rpx;
}
.imageBox {
  text-align: right;
}
.box image {
  width: 300rpx;
  height: 240rpx;
}