page {
	background-color: #f5f5f5;
	background-image: url(https://img.ok-bug.com/wechat/poetry_other/all_bg.png);
	background-size: 100% 100%;
}

.content_img {
	width: 700rpx;
	margin: 0 auto;
	height: 450rpx;
	background: #fff;
	margin-top: 30rpx;
	border-radius: 20rpx;
	box-shadow: 10rpx 10rpx 15rpx rgba(0, 0, 0, 0.1);
	overflow: hidden;
	position: relative;
}

.content_img .cover {
	width: 120rpx;
	height: 120rpx;
	background: #fff;
	position: absolute;
	border-radius: 10rpx;
	text-align: center;
	line-height: 120rpx;
	color: #f5f5f5;
	font-size: 48rpx;
	overflow: hidden;
	/* opacity: 0.5; */
	box-shadow: 10rpx 10rpx 35rpx rgba(0, 0, 0, 0.31);
}

.cover_content {
	position: relative;
	width: 100%;
	height: 100%;
	overflow: hidden;
}

.cover_content .dot {
	position: absolute;
	width: 60rpx;
	height: 60rpx;
	bottom: 0rpx;
	right: -10rpx;
	background-image: url(https://img.ok-bug.com/wechat/poetry_other/row.png);
	background-size: 100% 100%;
	animation: rowRun 1s infinite;
	transform: rotate(-130deg);
}

.show_result {
	position: absolute;
	width: 120rpx;
	height: 120rpx;
	left: 0;
	top: 0;
	background-size: 700rpx 450rpx;
}

.show_right {
	position: absolute;
	width: 120rpx;
	height: 120rpx;
	left: 0;
	top: 0;
	background: rgba(0, 0, 0, .3);
}

.show_right image {
	width: 60rpx !important;
	height: 60rpx !important;
	margin-top: 30rpx;
}

@keyframes rowRun {
	0% {
		bottom: 0rpx;
		right: -10rpx;
	}

	50% {
		bottom: 5rpx;
		right: -5rpx;
	}

	100% {
		bottom: 0rpx;
		right: -10rpx;
	}
}

.content_img image {
	width: 100%;
	height: 100%;
}

.content_choose {
	width: 700rpx;
	margin: 0 auto;
	display: flex;
	flex-wrap: wrap;
	justify-content: space-around;
	text-align: left;
	margin-top: 100rpx;
}

.choose_item {
	width: 120rpx;
	height: 120rpx;
	background-size: 700rpx 450rpx;
	border-radius: 20rpx;
	box-shadow: 10rpx 10rpx 15rpx rgba(0, 0, 0, 0.1);
	margin-top: 30rpx;
	position: relative;
	overflow: hidden;
}

.active_item {
	width: 120rpx;
	height: 120rpx;
	position: absolute;
	left: 0;
	top: 0;
	background: rgba(0, 0, 0, 0.5);
}
