page {
  background: #f5f5f5;
}

.search_wrap {

  width: 100%;
  background: #D1D0D5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 18rpx;
}

.input_wrap {
  position: relative;
  width: 550rpx;
}

.input_wrap .close {
  position: absolute;
  right: -20rpx;
  top: 55%;
  transform: translateY(-50%);
  color: red;
  z-index: 99;
}

.input_wrap .close image {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.7;
}

.fixed {
  position: fixed;
  top: 0;
  left: 0;
}

.search_wrap input {
  background: #fff;
  width: 100%;
  font-size: 32rpx;
  border-radius: 5rpx;
  padding: 0 20rpx;
  height: 70rpx;
}

.search_wrap .reset {
  color: #0475FF;
}


.loading {
  width: 300rpx;
}

.loading_wrap {
  text-align: center;
  position: fixed;
  bottom: 10rpx;
  left: 50%;
  transform: translateX(-50%);
}

.poetry_wrap {
  width: 95%;
  margin: 0 auto;
  margin-top: 20rpx;
  padding-bottom: 80rpx;
}

.poetry_wrap .item {
  background: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 20rpx;
  margin-bottom: 30rpx;
  font-size: 32rpx;
}



.base_icon {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.poetry_wrap .info {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;

}

.poetry_wrap .main {
  margin-top: 30rpx;

}

.poetry_wrap .detail {
  margin: 10rpx 0;
  text-align: center;
  margin-top: 30rpx;

}

.poetry_wrap .detail text {
  margin-left: 10rpx;
}

.poetry_wrap .name {
  font-size: 36rpx;
}

.poetry_wrap .author,
.poetry_wrap .home {
  color: #676767;
  font-size: 30rpx;
}

.poetry_wrap .content {
  font-size: 32rpx;
  color: #282C34;
  text-align: center;
  line-height: 70rpx;
  word-break: break-word;

}

.poetry_wrap .study {
  background: #FF7D68;
  border-radius: 8rpx;
  color: #fff;
  padding: 5rpx 10rpx;
  font-size: 28rpx;
}

.poetry_wrap .total {
  font-size: 32rpx;
  color: #282C34;
}

.all {
  text-align: center;
  font-size: 32rpx;
  color: #282C34;
}

.top {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: fixed;
  right: 50rpx;
  bottom: -130rpx;
  opacity: 0;
  transition: all .3s;

}