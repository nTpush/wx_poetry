page {
	background-color: #f5f5f5;
	background-image: url(https://img.ok-bug.com/wechat/poetry_other/all_bg.png);
	background-size: 100% 100%;
	background-attachment: fixed;
}

.main_content {
	width: 95%;
	margin: 0 auto;
	margin-top: 40rpx;
}

.poetry_row {
	display: flex;
	justify-content: flex-start;
}

.row_item {
	width: 80rpx;
	height: 80rpx;
	background: #474747;
	border-radius: 15rpx;
	color: #fff;
	line-height: 80rpx;
	text-align: center;
	font-size: 40rpx;
	margin-right: 20rpx;
	margin-bottom: 20rpx;
	position: relative;
}

.tip {
	width: 100%;
	height: 80rpx;
	border-radius: 10rpx;
	background: #fff;
	margin: 20rpx 0;
	line-height: 80rpx;
	font-size: 28rpx;
	padding: 0 20rpx;
	color: #5f5f5f;
	box-sizing: border-box;
}
.reflesh {
	float: right;
	color: #dc4c40;
}
.words_content {
	display: flex;
	flex-wrap: wrap;
	padding-bottom: 150rpx;
	width: 740rpx;
}

.worda_item {
	width: 80rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	color: #6480ae;
	background: #fff;
	border-radius: 10rpx;
	margin-right: 9rpx;
	margin-bottom: 9rpx;
}

.worda_item:nth-child(14) {
	margin-right: 25rpx;
}

.worda_item:nth-child(6) {
	margin-right: 25rpx;
}

.worda_item:nth-child(22) {
	margin-right: 25rpx;
}

.worda_item:nth-child(30) {
	margin-right: 25rpx;
}

.worda_item:nth-child(38) {
	margin-right: 25rpx;
}

.worda_item:nth-child(46) {
	margin-right: 25rpx;
}

.row_current {
	position: absolute;
	width: 80rpx;
	height: 80rpx;
	background: transparent;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
	border-radius: 15rpx;
	border: 1rpx solid #ffe8e8;
	box-shadow: 0 2rpx 20rpx #fadd3f;
	animation: cc 1.5s infinite;
	color: #fadd3f;
}

.already_choose {
	animation: rr 0.3s forwards;
}

@keyframes rr {
	0% {
		opacity: 1;
	}

	100% {
		opacity: 0.2;
	}
}

@keyframes cc {
	0% {
		opacity: 1;
	}

	50% {
		opacity: 0.2;
	}

	100% {
		opacity: 1;
	}
}

.right_w {
	color: #0db29b;
}

.wrong_w {
	color: #f07676;
}
