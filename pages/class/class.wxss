page {
    background: #f5f5f5;
    padding-bottom: 50rpx;
  }
  .class {
      display: flex;
  }
  .left {
      width: 150rpx;
      height: 100vh;
  }
  .left_fix {
    width: 150rpx;
    height: 100vh;
    background: #fff;
    position: fixed;
    left: 0;
    top: 0;
    box-sizing: border-box;
  }

  .left_fix .item {
      font-size: 30rpx;
      color: #222;
      text-align: center;
      padding:20rpx 10rpx;
      box-sizing: border-box;
      position: relative;

  }

  .left_fix .active {
    background: #f5f5f5;
    /* border-left: 6rpx solid #FF7C68; */
  }

  .left_fix .active::before {
      content: "";
      display: block;
      width: 6rpx;
      height: 100%;
      position: absolute;
      top: 0;
      left:0;
      background: #FF7C68;
  }

  .right {
    box-sizing: border-box;
    padding: 20rpx;
    width: 630rpx;
  }

  .img_wrap {
    box-sizing: border-box;
  }

  .class_img {
    width: 100%;
    height: 280rpx;
    border-radius: 30rpx;
  }

  .name_wrap {
    margin-top: 20rpx;
    font-size: 36rpx;
    color: #222;
    text-align: right;
    display: flex;
    justify-content: space-between;
  }

  .child_wrap {
    background: #fff;
    border-radius: 30rpx;
    box-sizing: border-box;
    padding: 20rpx;
    width: 100%;
    margin-top: 20rpx;
    font-size: 32rpx;
    color: #282C34;
    display: flex;
    justify-content: flex-start;
    flex-direction: row;
    flex-wrap: wrap;
  }

  .child_wrap .item {
    text-align: center;
    width: 30%;
    margin-right: 17rpx;
    margin-bottom: 40rpx;
  }

  .item_img {
    width: 120rpx;
    height: 120rpx;
    display: inline-block;
  }

  .item_img image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
  }