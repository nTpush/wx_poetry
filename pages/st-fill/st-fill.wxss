page {
  background-image: url(https://img.ok-bug.com/wechat/poetry_other/all_bg.png);
  background-size: 100% 100%;
}

.method_way {
  background: #F46C6D;
  border-radius: 50rpx;
  color: #fff;
  padding: 8rpx 20rpx;
}

.fill_container {
  display: flex;
  background: #fff;
  width: 95%;
  margin: 0 auto;
  border-radius: 20rpx;
  box-shadow: 10rpx 10rpx 15rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx 20rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  /*blur值为15px*/
}

.fill_info {
  width: 100%;
  display: flex;
  flex-direction: row-reverse;
  /*IE浏览器的从左向右 从右向左是 writing-mode: tb-rl；*/
}

.fill_info view {
  width: 90rpx;
  line-height: 70rpx;
  color: #4e4e4e;
  font-size: 48rpx;
  text-align: center;
}

.fill_answer {
  text-align: center;
}

.fill_me {
  width: 120rpx;
  height: 120rpx;
  vertical-align: middle;
}

.fill_answer .p1 {
  font-size: 40rpx;
  color: #f5f5f5;
  letter-spacing: 10rpx;
}

.fill_answer .p2 {
  font-size: 28rpx;
  color: #F0F0F0;
}

.fill_input {
  text-align: center;
  width: 500rpx;
  margin: 10rpx auto;
}

.fill_input input {
  background: #fff;
  text-align: center;
  height: 80rpx;
  width: 100%;
  box-shadow: 2rpx 2rpx 15rpx rgba(0, 0, 0, 0.2);
}

.fill_sure {
  text-align: right;
  margin-top: 30rpx;
  letter-spacing: 10rpx;

}

.fill_sure text {
  color: #fff;
  background: #6583F7;
  display: inline-block;
  width: 160rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 36rpx;
  border-radius: 10rpx;
  box-shadow: 2rpx 2rpx 15rpx rgba(0, 0, 0, 0.2);
}


.wrong {
  color: red !important;
}

.right {
  color: green !important;
}

.aa {
  color: #ccc !important;
}

.complete_result {
  color: #fff;
}