page {
  background: #f5f5f5;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.detail_wrap {
  width: 95%;
  margin: 0 auto;
  padding-bottom: 50rpx;
  
}

.wrap {
  background: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 20rpx;
}

.wrap .title {
  font-size: 34rpx;
  color: #4D4D4D;
  position: relative;
}

.wrap .title::before {
  content: '';
  display: inline-block;
  width: 100%;
  height: 2rpx;
  background: #E5E5E5;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}



.wrap .title text {
  background: #fff;
  position: relative;
  left: 50rpx;
  padding: 0 30rpx;
}

.poetry .button {
  position: absolute;
  right: 30rpx;
  top: -5rpx;
  background: #FF7C68;
  color: #fff;
  padding: 10rpx 28rpx;
  border-radius: 10rpx;
  font-size: 34rpx;
  z-index: 9;
}
.poetry .button::after {
  content: "";
  display: block;
  width: 190rpx;
  height: 80rpx;
  position: absolute;
  top: -10rpx;
  left: -57rpx;
  border-radius: 15rpx;
  background: url(https://img.ok-bug.com/wechat/poetry_other/star.png);
  background-size: contain;
  z-index: 9;
  background-repeat: no-repeat;
  animation: smallToBig 2s infinite;
}

.poetry .desc {
  width: 390rpx;
  height: 275rpx;
  /* border: 3px solid #FADED8; */
  position: absolute;
  right: -44rpx;
  top: -151rpx;
  border-radius: 15rpx;
  background: url(https://img.ok-bug.com/wechat/poetry_other/receit.png);
  background-size: contain;
  z-index: -1;
  /* animation: smallToBig 1s infinite; */
}

@keyframes smallToBig {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}


.content {
  margin-top: 50rpx;
  text-align: center;
}

.content .t {
  font-size: 38rpx;
  color: #282C34;
  margin-bottom: 20rpx;
}

.content .main {
  font-size: 36rpx;
  line-height: 80rpx;
  color: #585858;
}

.content .author {
  font-size: 34rpx;
  margin-bottom: 10rpx;
  color: #50525D;
}

.content .author .b {
  padding: 8rpx 15rpx;
  border-radius: 10rpx;
  font-size: 34rpx;
  margin-left: 200rpx;
  color: #50525D;
}

.content .heart {
  text-align: left;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.content .heart image {
  width: 50rpx;
  height: 50rpx
}

.xx .item {
  overflow-y: auto;
  height: 100%;
  width: 100%;
}

.setHeight {
  height: 1000rpx;
  margin: 30rpx 0;
  box-shadow:  0 0 20rpx #f5f5f5;
  box-sizing: border-box;
  padding: 20rpx;
}

.xx .item .c {
  font-size: 36rpx;
  color: #5F5F5F;
  display: flex;
  position: relative;
  text-align: left;
}

.xx .item .left {
  width: 93%;
}

.xx .item .tt {
  margin: 30rpx 0;
  text-align: center;
  color: #282C34;
  font-size: 38rpx;
}

.xx .item .more {
  overflow-y: hidden;
  width: 30rpx;
  position: absolute;
  left: 96.5%;
  opacity: 0.6;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  font-size: 38rpx;
  justify-content: space-between;
 
}

.xx .item .more text {
  display: block;
}

.footer {
  font-size: 36rpx;
  text-align: center;
  color: #A5A5A5;
  margin-top: 40rpx;
}

.authorInfo {
  font-size: 36rpx;
  color: #5F5F5F;
}

.authorInfo .tt {
  margin: 30rpx 0;
  text-align: center;
  color: #282C34;
  font-size: 38rpx;
}

.authorInfo .authorImg {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin: 15rpx;
  float: left;
}

.authorInfo .more {
  margin: 20rpx 0;
  text-align: center;
  color: #909090;
  font-size: 30rpx;
  position: relative;
  z-index: 12;
}

.flexChoose {
  position: sticky;
  top: 0px;
  z-index: 9;
  height: 80rpx;
  background: #fff;
  width: 100%;
  margin-top: 20rpx;
}

.itemChoose {
  display: flex;
  justify-content: space-around;
  background: #fff;
  align-items: center;
  transition: all 1s;
  width: 1200rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.itemChoose .item {
  text-align: center;
  font-size: 36rpx;
  color: #5F5F5F;
  border-bottom: 5rpx solid #fff;
}

.itemChoose .active {
  color: #FF7C68;
  border-bottom: 5rpx solid #FF7C68;
}

.poetryDetail {
  font-size: 30rpx;
  margin-top: 20rpx;
  color: #222;
  line-height: 50rpx;
  position: relative;
  padding-bottom: 100rpx;
  
}
.poetryDetail::after {
  content: '';
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  bottom: -100rpx;
  background-image: url(https://img.ok-bug.com/wechat/poetry_other/ee.png);
  background-size: contain;
  background-repeat: no-repeat;
  background-position: bottom;
  opacity: 0.6;
}

.top {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: fixed;
  right: 50rpx;
  bottom: -130rpx;
  opacity: 0;
  transition: all .3s;
}

.red {
  color: #DE6C76
}